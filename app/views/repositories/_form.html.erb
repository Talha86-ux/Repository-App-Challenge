<%= form_for :repository, url: url_for(action: @repository.persisted? ? :update : :create, id: @repository), method: @repository.persisted? ? :patch : :post do |f| %>
  <%= f.label :title%>
  <%= f.text_field :name %>
  <%= f.label :description%>
  <%= f.text_area :description %>
  <%= f.label :select_users%>
  <%= f.select :assign_users, options_for_select([['Select', '']] + User.pluck(:first_name, :id)), { include_hidden: false }, { multiple: true, class: "selectize" } %>
  <%= f.submit %>

<% end %>